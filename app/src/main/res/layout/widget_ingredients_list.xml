<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/backgroundPrimaryColorTransparent">

    <TextView
        android:id="@+id/widget_ingredients_list_recipe_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:textSize="@dimen/widget_ingredients_list_recipe_name_text_size"
        android:padding="@dimen/widget_ingredients_list_recipe_name_padding"
        android:background="@android:color/white"
        tools:text="Nutella Pie" />

    <ListView
        android:id="@+id/widget_ingredients_list_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>